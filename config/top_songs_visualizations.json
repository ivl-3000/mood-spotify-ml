{
  "Top 10 Happy Songs": {
    "type": "Table",
    "description": "Auto-updating list of top 10 happiest songs based on valence and sentiment",
    "data_source": "tracks_data",
    "columns": [
      {
        "name": "Rank",
        "type": "Integer",
        "calculation": "RANKX(ALL(tracks_data), tracks_data[valence] + tracks_data[sentiment_score], , DESC)"
      },
      {
        "name": "Track Name",
        "type": "Text",
        "field": "track_name"
      },
      {
        "name": "Artist",
        "type": "Text", 
        "field": "artist_name"
      },
      {
        "name": "Valence Score",
        "type": "Decimal",
        "field": "valence",
        "format": "0.00"
      },
      {
        "name": "Sentiment Score",
        "type": "Decimal",
        "field": "sentiment_score",
        "format": "0.00"
      },
      {
        "name": "Happiness Score",
        "type": "Decimal",
        "calculation": "tracks_data[valence] + tracks_data[sentiment_score]",
        "format": "0.00"
      },
      {
        "name": "Energy",
        "type": "Decimal",
        "field": "energy",
        "format": "0.00"
      },
      {
        "name": "Danceability",
        "type": "Decimal",
        "field": "danceability",
        "format": "0.00"
      }
    ],
    "filters": [
      {
        "field": "valence",
        "condition": "> 0.5"
      },
      {
        "field": "sentiment_score", 
        "condition": "> 0.1"
      }
    ],
    "sort": {
      "field": "Happiness Score",
      "direction": "DESC"
    },
    "limit": 10,
    "auto_refresh": true,
    "refresh_interval": "1 hour"
  },
  "Top 10 Sad Songs": {
    "type": "Table",
    "description": "Auto-updating list of top 10 saddest songs based on valence and sentiment",
    "data_source": "tracks_data",
    "columns": [
      {
        "name": "Rank",
        "type": "Integer",
        "calculation": "RANKX(ALL(tracks_data), tracks_data[valence] + tracks_data[sentiment_score], , ASC)"
      },
      {
        "name": "Track Name",
        "type": "Text",
        "field": "track_name"
      },
      {
        "name": "Artist",
        "type": "Text",
        "field": "artist_name"
      },
      {
        "name": "Valence Score",
        "type": "Decimal",
        "field": "valence",
        "format": "0.00"
      },
      {
        "name": "Sentiment Score",
        "type": "Decimal",
        "field": "sentiment_score",
        "format": "0.00"
      },
      {
        "name": "Sadness Score",
        "type": "Decimal",
        "calculation": "ABS(tracks_data[valence] + tracks_data[sentiment_score])",
        "format": "0.00"
      },
      {
        "name": "Energy",
        "type": "Decimal",
        "field": "energy",
        "format": "0.00"
      },
      {
        "name": "Acousticness",
        "type": "Decimal",
        "field": "acousticness",
        "format": "0.00"
      }
    ],
    "filters": [
      {
        "field": "valence",
        "condition": "< 0.5"
      },
      {
        "field": "sentiment_score",
        "condition": "< 0.1"
      }
    ],
    "sort": {
      "field": "Sadness Score",
      "direction": "DESC"
    },
    "limit": 10,
    "auto_refresh": true,
    "refresh_interval": "1 hour"
  },
